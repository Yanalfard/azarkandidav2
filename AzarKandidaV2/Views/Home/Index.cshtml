@model  AzarKandidaV2.ViewModels.ImageAndNewsVm


@section Styles{

    <link href="~/Content/css/Index.min.css" rel="stylesheet" />

}

<div class="blog mb-4">
    <h2 class="h5 mb-4">
        - اخبار انتخابات شورای اسلامی شهر 1400
    </h2>
    <div class="single-item-rtl" dir="rtl">
        @foreach (var item in Model.Blogs)
        {
            <div class="card ml-3 mr-3">
                @*<img src="~/Content/img/instagramPost.jpg" class="card-img-top" alt="...">*@
                <img src="~/Resources/Blogs/Thumb/@item.MainImage" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        @item.Title
                    </p>
                    <a href="/Blogs/@item.BlogId" class="link-primary text-decoration-none">بیشتر...</a>
                </div>
            </div>
        }
    </div>
</div>

<div class="row" style="border:0.5px solid black;padding:5px;">

        <div class="col-md-9">
            <div>
                <p class="card-text text-center">
                    بسمه تعالی
                </p>
                <p class="card-text text-center" style="line-height:30px;">
                    اینجانب لطیف لطیفی، در راستای حفظ و حراست از انقلاب اسلامی و لبیک به فرامین حضرت امام خمینی (ره) علاوه بر پیوستن به سپاه، در اجرای فرامین ایشان مبنی بر خدمت رسانی، ضمن انجام خدمات سازمانی که اغلب در حوزه های آموزشی، تربیتی، فرهنگی، سیاسی و مرکز تفکر راهبردی در سپاه منطقه مقاومت بسیج آذربایجان شرقی و سپاه عاشورا به همراه نزدیک دو دهه تدریس در دانشگاه های تبریز، آزاد تبریز، فرهنگیان، پیام نور، علمی کاربردی و ... بوده است،
                </p>
                <h5 class="card-text text-justify" style="margin-top:5%;">
                    نخبگان و شهروندان عزیز با تعلیم و تربیت نرم افزاری می توان در شهرها به زندگی آرام بخش کمک کرد.
                </h5>
            </div>
        </div>
        <div class="col-md-3">
            <img style="width:100%" src="~/Resources/Images/Image1.jpeg" />
        </div>
   
</div>

<h2 class="h5 mb-4" dir="rtl" style="margin-top:20px;">
    - کاندیداهای شورای اسلامی شهر تبریز
</h2>
<div class="grid">

    @foreach (var item in Model.Images)
    {
        <a href="@item.Link">
            <img src="~/Resources/Images/Thumb/@item.ImageUrl" loading="lazy" alt="@item.Text">
            <div class="overlay">
                <label>
                    @item.Text
                </label>
            </div>
        </a>
    }

</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/macy@2"></script>

    <script>
        var macy = Macy({
            container: '.grid',
            trueOrder: false,
            waitForImages: false,
            margin: 24,
            columns: 3,
            breakAt: {
                2400: 4,
                1600: 4,
                1200: 3,
                900: 2,
                450: 1,
            }
        });
    </script>




    <script>
        $('.single-item-rtl').slick({
            rtl: true,
            infinite: true,
            autoplay: true,
            arrows: true,
            nextArrow: `<button class="slick-prev slick-arrow" type="button" style=""><ion-icon size="large" name="chevron-back-outline"></ion-icon></button>`,
            prevArrow: `<button class="slick-next slick-arrow" type="button" style=""><ion-icon size="large" name="chevron-forward-outline"></ion-icon></button>`,
            slidesToShow: 4,
            slidesToScroll: 1,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3
                    }
                },
                {
                    breakpoint: 780,
                    settings: {
                        slidesToShow: 2
                    }
                },
                {
                    breakpoint: 512,
                    settings: {
                        slidesToShow: 1
                    }
                }
            ]
        });

    </script>

}