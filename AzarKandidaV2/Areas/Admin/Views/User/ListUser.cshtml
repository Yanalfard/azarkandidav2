@model IEnumerable<DataLayer.TblImage>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="user_@item.ImageId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>

            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="~/Resources/Images/Thumb/@item.ImageUrl" alt="Alternate Text" style="height:150px;" />
                }
                else
                {
                    <img src="~/Resources/Images/Thumb/@item.ImageUrl" alt="Alternate Text" style="height: 150px;" />
                }
            </td>
            <td>
                @item.Text
            </td>
            <td>@item.Link</td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                    <a href="/Admin/User/Edit/@item.ImageId"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                </span>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteUser(@item.ImageId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
