@model DataLayer.TblImage
@{
    ViewBag.Title = "ایجاد  کاربر جدید";
}

<div class="flex-column card flex-div border-0 shadow">
    <div class="card-header bg-white">
        <h4>کاندیدای  جدید</h4>
    </div>
    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="form-group mx-sm-1 mb-2">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "نام ", required = "required" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mx-sm-1 mb-2">
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "لینک", required = "required" } })
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <span>
                    عکس کاندید
                </span>
                <input type="file" name="MainImage" id="MainImage" required />
                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })

            </div>

        </div>
        <div class="card-footer bg-white">
            <div class="flex-row">
                <button class="btn btn-primary">تایید</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">بازگشت</a>
            </div>
        </div>
    }
</div>


